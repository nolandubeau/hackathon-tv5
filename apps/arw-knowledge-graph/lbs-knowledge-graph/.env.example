# LBS Knowledge Graph - Environment Configuration
# Copy this file to .env and fill in your values

# Target Website
TARGET_URL=https://london.edu
MAX_PAGES=10
CRAWL_DEPTH=3
CRAWL_DELAY_MS=2000

# LLM Configuration (choose one)
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Anthropic (alternative)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCOUNT_ID=123456789012
S3_BUCKET=lbs-kg-content
LAMBDA_FUNCTION_NAME=lbs-kg-graph-query

# Graph Database
MGRAPH_EXPORT_DIR=./exports
MGRAPH_CACHE_ENABLED=true

# Content Repository
CONTENT_REPO_PATH=./content-repo
RAW_HTML_DIR=./content-repo/raw
PARSED_JSON_DIR=./content-repo/parsed

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/lbs-kg.log

# Testing
TEST_MODE=false
TEST_PAGES_LIMIT=5

# CI/CD
GITHUB_TOKEN=ghp_...
DEPLOY_ENVIRONMENT=development

# Performance
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_MS=30000
CACHE_TTL_SECONDS=3600

# Security
RATE_LIMIT_PER_HOUR=1000
ENABLE_ROBOTS_TXT=true
USER_AGENT=LBS-KnowledgeGraph-Bot/1.0
