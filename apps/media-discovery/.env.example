# TMDB API Configuration
NEXT_PUBLIC_TMDB_ACCESS_TOKEN=your_tmdb_access_token_here

# AI/LLM Configuration (for natural language processing)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# RuVector Configuration (embedded vector database)
# Storage path for persistent vector database (defaults to ./data/media-vectors.db)
RUVECTOR_STORAGE_PATH=./data/media-vectors.db

# GCP Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1

# Database (Firestore)
FIRESTORE_PROJECT_ID=your_gcp_project_id

# Feature Flags
ENABLE_PREFERENCE_LEARNING=true
ENABLE_ARW_DISCOVERY=true

# LiveKit Configuration (Voice Assistant)
LIVEKIT_URL=wss://your_livekit_instance_url_here
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# Google Gemini API for Voice Assistant (alternative to GOOGLE_AI_API_KEY)
# Use GOOGLE_API_KEY for Gemini Live API access
GOOGLE_API_KEY=your_google_api_key_here

# Voice Agent Configuration
NEXT_APP_URL=http://localhost:3000
