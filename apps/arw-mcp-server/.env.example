# MCP Server Configuration
NODE_ENV=development
PORT=3000

# Transport Mode (stdio or sse)
TRANSPORT=stdio

# Service URLs
DISCOVERY_SERVICE_URL=http://localhost:4001
CONTENT_SERVICE_URL=http://localhost:4002
RECOMMENDATION_SERVICE_URL=http://localhost:4003
USER_SERVICE_URL=http://localhost:4004

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_PUBLIC_KEY_URL=https://auth.media-gateway.com/.well-known/jwks.json

# Rate Limiting
RATE_LIMIT_UNAUTHENTICATED=10
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_WINDOW_MS=900000

# Caching
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://media-gateway.com

# API Version
API_VERSION=1.0.0
